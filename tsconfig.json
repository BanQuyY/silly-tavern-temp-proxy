{
    "compilerOptions": {
        "target": "es2016",
        "lib": ["ES2018"],
        "module": "commonjs",
        "rootDir": "./src",
        "declaration": true,
        "sourceMap": true,
        "outDir": "dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true,
        "typeRoots": ["./src/typings", "./node_modules/@types"]
    },
    "include": ["src/**/*"]
}
